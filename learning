#!/bin/bash

if [ $# -lt 3 ] || [ ! -x "$1" ] || [ ! -x "$2" ] ; then
  echo learning_bin normalize_bin font_dir... >&2
  exit 1
fi

learning_bin=$1
normalize_bin=$2
shift 2

temp=/tmp/$$-learning

for d in "$@" ; do
  font="$(basename "$d")"
  for f in "$d"/*.pbm ; do
    "$learning_bin" "$f" "${f:0:-3}"txt "$font"
    [ $? != 0 ] && echo "$f" >&2
  done
done > "$temp"

$normalize_bin "$temp"

rm "$temp"
